      "comments": [
        {
          "body": "Text from input comment..",
          "article_id": 9,
          "author": "butter_bridge",
          "votes": 0,
          "created_at": "1586179020000"
        }
      ]
    }
  },
  "GET /api/comments": {
    "description": "serves an array of all comments",
